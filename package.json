{
  "name": "generator-lit-element-next",
  "version": "2.12.1",
  "description": "Generator for developing your next custom element with latest LitElement in TypeScript",
  "keywords": [
    "generator",
    "generator-lit-element-next",
    "lit-element",
    "lit-html",
    "typescript",
    "yeoman",
    "yeoman-generator",
    "yo"
  ],
  "homepage": "https://github.com/motss/generator-lit-element-next",
  "repository": {
    "type": "git",
    "url": "git@github.com:motss/generator-lit-element-next.git"
  },
  "license": "MIT",
  "author": {
    "name": "Rong Sen Ng (motss)",
    "email": "wes.ngrongsen@gmail.com",
    "url": "https://github.com/motss"
  },
  "files": [
    "app"
  ],
  "main": "app/index.js",
  "module": "app/index.js",
  "scripts": {
    "build": "npm run clean && npm run lint && npm run ts -- -p ./tsconfig.json",
    "build:prod": "npm run clean && npm run lint:prod && npm run ts -- -p ./tsconfig.prod.json",
    "clean": "shx rm -rf coverage/ app/tests/ app/index.js app/index.js.map app/index.d.ts app/index.d.ts.map",
    "jest": "jest --config ./.jestrc.json",
    "lint": "tslint --project tsconfig.json",
    "lint:prod": "npm run lint -- --config tslint.prod.json --format stylish",
    "prepublishOnly": "npm run build:prod",
    "postpublish": "npm run clean",
    "test": "npm run build && npm run jest",
    "ts": "tsc",
    "upgrade": "npm outdated --dev && npm update --dev && npm audit fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run ts -- --noEmit && npm run clean"
    }
  },
  "dependencies": {
    "chalk": "^3.0.0",
    "gh-user": "^4.0.0",
    "yeoman-generator": "^4.2.0",
    "yosay": "^2.0.2"
  },
  "devDependencies": {
    "@reallyland/tsconfig": "^1.0.0",
    "@reallyland/tslint-config": "^1.1.1",
    "@types/jest": "^24.0.23",
    "@types/node": "^12.12.7",
    "@types/yeoman-assert": "^3.1.1",
    "@types/yeoman-generator": "^3.1.4",
    "@types/yeoman-test": "^2.0.3",
    "@types/yosay": "0.0.29",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "shx": "^0.3.2",
    "tslint": "^5.20.1",
    "typescript": "^3.7.2",
    "yeoman-assert": "^3.1.1",
    "yeoman-test": "^2.0.0"
  },
  "engines": {
    "node": ">= 8.16.0",
    "npm": ">= 6.4.1"
  },
  "publishConfig": {
    "access": "public"
  }
}
